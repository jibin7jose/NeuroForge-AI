{
  "name": "neuroforge-ai",
  "displayName": "NeuroForge AI",
  "description": "Inline code intelligence, weakness detection, and skill insights powered by NeuroForge backend.",
  "version": "0.0.1",
  "publisher": "neuroforge",
  "author": "Jibin Jose",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neuroforge.analyzeFile",
        "title": "NeuroForge: Analyze Current File"
      },
      {
        "command": "neuroforge.analyzeWorkspace",
        "title": "NeuroForge: Analyze Full Workspace"
      },
      {
        "command": "neuroforge.applyFix",
        "title": "NeuroForge: Apply Neural Patch"
      },
      {
        "command": "neuroforge.explainCode",
        "title": "NeuroForge: Explain this Code"
      },
      {
        "command": "neuroforge.showNeuralDNA",
        "title": "NeuroForge: Show my Coding DNA"
      },
      {
        "command": "neuroforge.interviewMode",
        "title": "NeuroForge: Elite Interview Mode"
      },
      {
        "command": "neuroforge.analyzeWorkspace",
        "title": "NeuroForge: Analyze Workspace Health"
      },
      {
        "command": "neuroforge.showHeatmap",
        "title": "NeuroForge: Show Complexity Heatmap"
      },
      {
        "command": "neuroforge.generateTests",
        "title": "NeuroForge: Generate Unit Tests"
      },
      {
        "command": "neuroforge.generateDocs",
        "title": "NeuroForge: Inject Neural Documentation"
      },
      {
        "command": "neuroforge.refreshRiskHeatmap",
        "title": "NeuroForge: Refresh Risk Heatmap"
      },
      {
        "command": "neuroforge.toggleRiskHeatmap",
        "title": "NeuroForge: Toggle Risk Heatmap"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "neuroforge.explainCode",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "neuroforge.showNeuralDNA",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.generateTests",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.generateDocs",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neuroforge-explorer",
          "title": "NeuroForge",
          "icon": "media/brain.svg"
        }
      ]
    },
    "views": {
      "neuroforge-explorer": [
        {
          "type": "webview",
          "id": "neuroforge.sidebar",
          "name": "Neural Intelligence",
          "icon": "media/brain.svg"
        },
        {
          "type": "webview",
          "id": "neuroforge.chat",
          "name": "NeuroForge Copilot",
          "icon": "media/brain.svg"
        }
      ]
    },
    "configuration": {
      "title": "NeuroForge",
      "properties": {
        "neuroforge.aiEngineUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8000",
          "description": "Base URL for the NeuroForge AI Engine (without trailing slash)."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "lint": "echo \"No lint configured\"",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/vscode": "^1.85.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
