{
  "name": "neuroforge-ai",
  "displayName": "NeuroForge AI",
  "description": "Inline code intelligence, weakness detection, and skill insights powered by NeuroForge backend.",
  "version": "0.0.1",
  "publisher": "neuroforge",
  "author": "Jibin Jose",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onCommand:neuroforge.blastRadius",
    "onCommand:neuroforge.blastRadiusView",
    "onCommand:neuroforge.blastRadiusCopy",
    "onCommand:neuroforge.contractDrift",
    "onCommand:neuroforge.contractDriftPanel",
    "onCommand:neuroforge.mergePredict",
    "onCommand:neuroforge.mergePredictPanel",
    "onCommand:neuroforge.launcher",
    "onCommand:neuroforge.intelligenceSuite",
    "onCommand:neuroforge.pushNow",
    "onCommand:neuroforge.startAutoPush",
    "onCommand:neuroforge.stopAutoPush",
    "onCommand:neuroforge.showAutoPushLog",
    "onCommand:neuroforge.startEngine",
    "onCommand:neuroforge.setEngineUrl"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neuroforge.analyzeFile",
        "title": "NeuroForge: Analyze Current File"
      },
      {
        "command": "neuroforge.analyzeWorkspace",
        "title": "NeuroForge: Analyze Full Workspace"
      },
      {
        "command": "neuroforge.applyFix",
        "title": "NeuroForge: Apply Neural Patch"
      },
      {
        "command": "neuroforge.explainCode",
        "title": "NeuroForge: Explain this Code"
      },
      {
        "command": "neuroforge.showNeuralDNA",
        "title": "NeuroForge: Show my Coding DNA"
      },
      {
        "command": "neuroforge.interviewMode",
        "title": "NeuroForge: Elite Interview Mode"
      },
      {
        "command": "neuroforge.showHeatmap",
        "title": "NeuroForge: Show Complexity Heatmap"
      },
      {
        "command": "neuroforge.generateTests",
        "title": "NeuroForge: Generate Unit Tests"
      },
      {
        "command": "neuroforge.generateDocs",
        "title": "NeuroForge: Inject Neural Documentation"
      },
      {
        "command": "neuroforge.refreshRiskHeatmap",
        "title": "NeuroForge: Refresh Risk Heatmap"
      },
      {
        "command": "neuroforge.toggleRiskHeatmap",
        "title": "NeuroForge: Toggle Risk Heatmap"
      },
      {
        "command": "neuroforge.selectCoverageFile",
        "title": "NeuroForge: Select Coverage File"
      },
      {
        "command": "neuroforge.fastRefactor",
        "title": "NeuroForge: Fast Refactor (Organize Imports)"
      },
      {
        "command": "neuroforge.showLogs",
        "title": "NeuroForge: Show Logs"
      },
      {
        "command": "neuroforge.startEngine",
        "title": "NeuroForge: Start AI Engine"
      },
      {
        "command": "neuroforge.setEngineUrl",
        "title": "NeuroForge: Set AI Engine URL"
      },
      {
        "command": "neuroforge.pushNow",
        "title": "NeuroForge: Push Changes Now"
      },
      {
        "command": "neuroforge.startAutoPush",
        "title": "NeuroForge: Start Auto Push"
      },
      {
        "command": "neuroforge.stopAutoPush",
        "title": "NeuroForge: Stop Auto Push"
      },
      {
        "command": "neuroforge.blastRadius",
        "title": "NeuroForge: BlastRadius (Blast Radius)"
      },
      {
        "command": "neuroforge.blastRadiusView",
        "title": "NeuroForge: BlastRadius (Panel)"
      },
      {
        "command": "neuroforge.blastRadiusCopy",
        "title": "NeuroForge: Copy Blast Radius Report"
      },
      {
        "command": "neuroforge.contractDrift",
        "title": "NeuroForge: Contract Drift Monitor"
      },
      {
        "command": "neuroforge.contractDriftPanel",
        "title": "NeuroForge: Contract Drift (Panel)"
      },
      {
        "command": "neuroforge.mergePredict",
        "title": "NeuroForge: Merge Conflict Predictor"
      },
      {
        "command": "neuroforge.mergePredictPanel",
        "title": "NeuroForge: Merge Conflict Predictor (Panel)"
      },
      {
        "command": "neuroforge.launcher",
        "title": "NeuroForge: Quick Actions"
      },
      {
        "command": "neuroforge.showAutoPushLog",
        "title": "NeuroForge: Show Auto Push Log"
      },
      {
        "command": "neuroforge.intelligenceSuite",
        "title": "NeuroForge: Intelligence Suite"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "neuroforge.explainCode",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "neuroforge.fastRefactor",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.showNeuralDNA",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.generateTests",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.generateDocs",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.blastRadius",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.blastRadiusView",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.blastRadiusCopy",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.contractDrift",
          "group": "navigation",
          "when": "editorTextFocus && editorLangId == json"
        },
        {
          "command": "neuroforge.contractDriftPanel",
          "group": "navigation",
          "when": "editorTextFocus && editorLangId == json"
        },
        {
          "command": "neuroforge.mergePredict",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.mergePredictPanel",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "neuroforge.intelligenceSuite",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "neuroforge-explorer",
          "title": "NeuroForge",
          "icon": "media/brain.svg"
        }
      ]
    },
    "views": {
      "neuroforge-explorer": [
        {
          "type": "webview",
          "id": "neuroforge.sidebar",
          "name": "Neural Intelligence",
          "icon": "media/brain.svg"
        },
        {
          "type": "webview",
          "id": "neuroforge.chat",
          "name": "NeuroForge Copilot",
          "icon": "media/brain.svg"
        }
      ]
    },
    "configuration": {
      "title": "NeuroForge",
      "properties": {
        "neuroforge.aiEngineUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8000",
          "description": "Base URL for the NeuroForge AI Engine (without trailing slash)."
        },
        "neuroforge.coverageFile": {
          "type": "string",
          "default": "",
          "description": "Optional path to a coverage JSON file (e.g., coverage-final.json)."
        },
        "neuroforge.autoPushRepos": {
          "type": "array",
          "default": [
            "ai-engine",
            "vscode-extension"
          ],
          "description": "Repositories to include when running NeuroForge: Push Changes Now."
        },
        "neuroforge.autoPushMessagePrefix": {
          "type": "string",
          "default": "AI message",
          "description": "Commit message prefix used by NeuroForge: Push Changes Now."
        },
        "neuroforge.autoPushIntervalSeconds": {
          "type": "number",
          "default": 60,
          "description": "Interval (in seconds) for NeuroForge auto-push."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "lint": "echo \"No lint configured\"",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/vscode": "^1.85.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
